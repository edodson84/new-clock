<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="false">

    <CheckBox
        android:id="@id/day_button_0"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toStartOf="@id/day_button_1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@id/day_button_1"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toStartOf="@id/day_button_2"
        app:layout_constraintStart_toEndOf="@id/day_button_0"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@id/day_button_2"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toStartOf="@id/day_button_3"
        app:layout_constraintStart_toEndOf="@id/day_button_1"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@id/day_button_3"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toStartOf="@id/day_button_4"
        app:layout_constraintStart_toEndOf="@id/day_button_2"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@id/day_button_4"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toStartOf="@id/day_button_5"
        app:layout_constraintStart_toEndOf="@id/day_button_3"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@id/day_button_5"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toStartOf="@id/day_button_6"
        app:layout_constraintStart_toEndOf="@id/day_button_4"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@id/day_button_6"
        style="@style/DayButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/day_button_5"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>